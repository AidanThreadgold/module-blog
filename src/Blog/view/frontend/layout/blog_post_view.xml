<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"  layout="2columns-right" >

    <update handle="blog_default"/>

    <body>
        <referenceBlock name="sidebar.additional" remove="true" />

        <referenceContainer name="sidebar.main" htmlTag="div" htmlClass="widget kb-sidebar__categories" >
            <block class="Mirasvit\Blog\Block\Category\Sidebar" name="blog.category.sidebar" template="category/sidebar.phtml" />
            <block class="Mirasvit\Blog\Block\Post\Recent" name="blog.post.recent" template="post/recent.phtml" />
        </referenceContainer>

        <referenceContainer name="content">
            <block name="blog.post.view" class="Mirasvit\Blog\Block\Post\View" template="post/view.phtml" cacheable="true">
                <block name="blog.post.comments" class="Mirasvit\Blog\Block\Post\Meta" template="post/view/comments.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
