<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="admin-1column">
    <head>
        <css src="Magento_Catalog::catalog/category-selector.css"/>
    </head>
    <body>
        <referenceContainer name="left">

        </referenceContainer>
        <referenceContainer name="content">
            <block class="Mirasvit\Blog\Block\Adminhtml\Post\Edit" name="edit">
                <block class="Mirasvit\Blog\Block\Adminhtml\Post\Edit\Form" template="post/edit/form.phtml" name="form">

                    <block name="sidebar" class="Mirasvit\Blog\Block\Adminhtml\Post\Edit\Sidebar">
                        <block name="publish" class="Mirasvit\Blog\Block\Adminhtml\Post\Edit\Sidebar\Publish"/>
                        <block name="categories" class="Mirasvit\Blog\Block\Adminhtml\Post\Edit\Sidebar\Categories"/>
                        <block name="tags" class="Mirasvit\Blog\Block\Adminhtml\Post\Edit\Sidebar\Tags"/>
                    </block>

                    <block name="tabs" class="Mirasvit\Blog\Block\Adminhtml\Post\Edit\Tabs" />
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
